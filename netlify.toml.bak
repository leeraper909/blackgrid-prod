[build]
  publish = "public"

[build.environment]
  NODE_VERSION = "20"

[functions]
  node_bundler = "esbuild"
  external_node_modules = ["@netlify/blobs"]

# Security headers
[[headers]]
  for = "/*"
  [headers.values]
    Strict-Transport-Security = "max-age=63072000; includeSubDomains; preload"
    X-Frame-Options = "DENY"
    X-Content-Type-Options = "nosniff"
    Referrer-Policy = "no-referrer"
    Permissions-Policy = "camera=(), microphone=(), geolocation=(), payment=()"
    Content-Security-Policy = """
      default-src 'self';
      base-uri 'none';
      object-src 'none';
      frame-ancestors 'none';
      img-src 'self' https: data:;
      font-src 'self' data:;
      style-src 'self' 'unsafe-inline' https://unpkg.com;
      script-src 'self' https://unpkg.com;
      connect-src 'self';
      upgrade-insecure-requests;
    """

# Cache the JSON hard at the edge
[[headers]]
  for = "/data/*.json"
  [headers.values]
    Cache-Control = "public, max-age=120, s-maxage=120, stale-while-revalidate=600"

# Serve old function URL from the static file
[[redirects]]
  from = "/.netlify/functions/feeds"
  to   = "/data/feeds.json"
  status = 200
  force = true

[[redirects]]
  from = "/status"
  to   = "/.netlify/functions/status"
  status = 200

[[redirects]]
  from = "/favicon.ico"
  to   = "/favicon.svg"
  status = 200

[[redirects]]
  from = "/files/favicon.ico"
  to   = "/favicon.svg"
  status = 200

# Keep only schedules you actually use
[[scheduled.functions]]
  name = "daily-digest"
  cron = "0 7 * * *"
